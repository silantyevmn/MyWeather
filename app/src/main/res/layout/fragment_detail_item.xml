<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/CardViewStyleFragmentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_temperature"
                style="@style/MyStyle.LinearLayout"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_temperature" />

                <TextView
                    android:id="@+id/text_view_temperature"
                    android:hint="@string/text_prefix_temperature"
                    style="@style/MyStyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_humidity"
                style="@style/MyStyle.LinearLayout"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_humidity" />

                <TextView
                    android:id="@+id/text_view_humidity"
                    android:hint="@string/text_prefix_humidity"
                    style="@style/MyStyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_pressure"
                style="@style/MyStyle.LinearLayout"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_pressure" />

                <TextView
                    android:id="@+id/text_view_pressure"
                    android:hint="@string/text_prefix_pressure"
                    style="@style/MyStyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_wind"
                style="@style/MyStyle.LinearLayout"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_wind" />

                <TextView
                    android:id="@+id/text_view_wind"
                    android:hint="@string/text_prefix_wind"
                    style="@style/MyStyle" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>