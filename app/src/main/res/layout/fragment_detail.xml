<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_info_progress_internet" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_layout_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_view_city"
            style="@style/MyStyle.TextSize20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin10"
            android:hint="Москва"
            android:paddingStart="@dimen/margin10" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_city"
            android:hint="Вторник, 06.06.2018 12:00"
            android:paddingLeft="@dimen/margin10"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/text_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/text_view_temperature"
            android:hint="+"
            android:padding="@dimen/margin10"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/text_view_temperature"
            style="@style/MyStyle.TextSize20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:hint="+25" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text_view_temperature"
            android:layout_below="@+id/text_view_temperature"
            android:hint="Небо чистое"
            android:textSize="@dimen/text_size_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_time"
            android:layout_marginTop="@dimen/margin10" />

    </RelativeLayout>
</FrameLayout>



