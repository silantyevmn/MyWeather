<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Идет загрузка с погодного сервера..." />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_layout_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_view_city"
            style="@style/MyStyle.TextSize20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:hint="Москва"
            android:padding="10dp" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_city"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:hint="Вторник, 06.06.2018 12:00" />

        <TextView
            android:id="@+id/text_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/text_view_temperature"
            android:hint="+"
            android:padding="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_temperature"
            style="@style/MyStyle.TextSize20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="+25"
            android:padding="10dp" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text_view_temperature"
            android:layout_below="@+id/text_view_temperature"
            android:textSize="12sp"
            android:hint="Небо чистое" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_time" />

    </RelativeLayout>
</FrameLayout>



